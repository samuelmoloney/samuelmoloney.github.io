    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "p5": "^1.10.0",
    "p5-typescript": "^4.3.0"
  }
